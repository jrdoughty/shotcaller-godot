[gd_resource type="Shader" format=2]

[resource]
code = "shader_type canvas_item;

uniform vec4 origin:source_color;
uniform vec4 origin2:source_color;
uniform vec4 origin3:source_color;
uniform vec4 origin4:source_color;
uniform vec4 new:source_color;
uniform vec4 new2:source_color;
uniform vec4 new3:source_color;
uniform vec4 new4:source_color;

uniform float tolerance;

void fragment() {
	vec4 current_pixel = texture(TEXTURE, UV);
	if (length(current_pixel - origin) < tolerance) COLOR = new;
	else if (length(current_pixel - origin2) < tolerance) COLOR = new2;
	else if (length(current_pixel - origin3) < tolerance) COLOR = new3;
	else if (length(current_pixel - origin4) < tolerance) COLOR = new4;
	else COLOR = current_pixel;
}"
